# =====================================================
# Hybrid RAG System - Environment Variables
# =====================================================
# このファイルを .env にコピーして、実際の値を設定してください
# Windows: copy .env.example .env
# Mac/Linux: cp .env.example .env

# =====================================================
# Claude API Configuration
# =====================================================
# Anthropic Console (https://console.anthropic.com/) で取得
# 必須: システムの動作に必要
CLAUDE_API_KEY=your_claude_api_key_here

# =====================================================
# Flask Server Configuration
# =====================================================
# 開発環境の場合
FLASK_ENV=development
FLASK_DEBUG=True

# 本番環境の場合（コメントを外して使用）
# FLASK_ENV=production
# FLASK_DEBUG=False

# サーバーポート（デフォルト: 5003）
# FLASK_PORT=5003

# =====================================================
# Vector Database Configuration
# =====================================================
# ベクトルDBの保存先
VECTOR_DB_PATH=./vector_db/faiss_index.bin

# PDFチャンク設定
CHUNK_SIZE=800              # チャンクサイズ（文字数）
CHUNK_OVERLAP=100           # チャンク間のオーバーラップ（文字数）

# =====================================================
# RAG Search Configuration
# =====================================================
# ベクトル検索設定
TOP_K_CHUNKS=10             # 初期検索で取得するチャンク数
FINAL_CHUNKS=5              # 最終的にLLMに送るチャンク数

# セマンティック重複除去の閾値
SIMILARITY_THRESHOLD=0.93   # この値以上の類似度で重複とみなす

# =====================================================
# FAQ Search Configuration
# =====================================================
# FAQ検索の類似度閾値（この値以上でFAQ回答を返す）
FAQ_THRESHOLD=0.85          # 推奨: 0.80-0.90

# =====================================================
# FAQ Generation Configuration
# =====================================================
# FAQ自動生成の設定
FAQ_GEN_WINDOW_SIZE=50      # PDFから抽出するウィンドウサイズ（文字数）
FAQ_GEN_DUPLICATE_THRESHOLD_EXACT=0.95   # 完全重複の閾値
FAQ_GEN_DUPLICATE_THRESHOLD_SIMILAR=0.80 # 類似重複の閾値（+キーワードマッチ）
FAQ_GEN_WAIT_TIME=0.3       # API呼び出し間の待機時間（秒）

# =====================================================
# File Paths
# =====================================================
# PDFファイルディレクトリ
# REFERENCE_DOCS_DIR=./reference_docs

# FAQデータファイル
# FAQ_DATABASE_PATH=./faq_database.csv
# PENDING_QA_PATH=./pending_qa.csv
# FAQ_GENERATION_HISTORY_PATH=./faq_generation_history.csv

# =====================================================
# Logging Configuration
# =====================================================
# ログレベル（DEBUG, INFO, WARNING, ERROR, CRITICAL）
LOG_LEVEL=INFO

# ログファイル出力の有無
# LOG_TO_FILE=True
# LOG_FILE_PATH=./app.log

# =====================================================
# Optional: Advanced Settings
# =====================================================
# Sentence Transformersモデル
# EMBEDDING_MODEL=paraphrase-multilingual-mpnet-base-v2

# Claude APIモデル
# CLAUDE_MODEL=claude-3-5-sonnet-20241022

# 最大トークン数
# MAX_TOKENS=2000

# タイムアウト設定（秒）
# API_TIMEOUT=60
