# RAGシステム環境変数サンプル
# このファイルをコピーして .env にリネームし、実際のAPIキーを設定してください

# Claude API Key
CLAUDE_API_KEY=your_claude_api_key_here

# または OpenAI API Key
# OPENAI_API_KEY=your_openai_api_key_here

# Flask設定
FLASK_ENV=development
FLASK_DEBUG=True

# ベクトルDB設定
VECTOR_DB_PATH=./vector_db/faiss_index.bin
CHUNK_SIZE=800
CHUNK_OVERLAP=100

# 検索設定
TOP_K_CHUNKS=10
FINAL_CHUNKS=5

# 重複除去設定
SIMILARITY_THRESHOLD=0.93
